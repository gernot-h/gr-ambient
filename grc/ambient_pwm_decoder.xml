<?xml version="1.0"?>
<block>
  <name>pwm_decoder</name>
  <key>ambient_pwm_decoder</key>
  <category>Ambient Weather</category>
  <import>import ambient</import>
  <make>ambient.pwm_decoder($zero_len, $one_len, $slack, $threshold)</make>
  
  <param>
    <name>Zero pulse width</name>
    <key>zero_len</key>
    <type>int</type>
  </param>
  
  <param>
    <name>One pulse width</name>
    <key>one_len</key>
    <type>int</type>
  </param>
  
  <param>
    <name>Width tolerance</name>
    <key>slack</key>
    <type>float</type>
  </param>
  
  <param>
    <name>Threshold</name>
    <key>threshold</key>
    <type>float</type>
  </param>
  
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>
</block>
